# ═══════════════════════════════════════════════════════════
# 🐆 BLACKPANTHER v2.0 - CONFIGURATION TEMPLATE
# ═══════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────
# SYSTEM
# ─────────────────────────────────────────────────────────────
MODE=PAPER                    # PAPER or LIVE
LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR

# ─────────────────────────────────────────────────────────────
# BINANCE
# ─────────────────────────────────────────────────────────────
BINANCE_API_KEY=              # Spot API key
BINANCE_API_SECRET=           # Spot API secret
BINANCE_FUTURES_API_KEY=      # Futures API key (optional)
BINANCE_FUTURES_API_SECRET=   # Futures API secret (optional)
BINANCE_TESTNET=true          # true for testnet, false for production

# ─────────────────────────────────────────────────────────────
# GATE.IO
# ─────────────────────────────────────────────────────────────
GATEIO_API_KEY=               # Gate.io API key
GATEIO_API_SECRET=            # Gate.io API secret
GATEIO_TESTNET=true           # true for testnet, false for production

# ─────────────────────────────────────────────────────────────
# DATABASE & STATE
# ─────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
SUPABASE_URL=                 # https://xxx.supabase.co
SUPABASE_KEY=                 # anon key
SUPABASE_SERVICE_KEY=         # service role key (optional)

# ─────────────────────────────────────────────────────────────
# INTELLIGENCE
# ─────────────────────────────────────────────────────────────
PERPLEXITY_API_KEY=           # For sentiment analysis

# ─────────────────────────────────────────────────────────────
# ALERTS (Optional)
# ─────────────────────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=           # From @BotFather
TELEGRAM_CHAT_ID=             # Your chat ID

# ─────────────────────────────────────────────────────────────
# RISK MANAGEMENT
# ─────────────────────────────────────────────────────────────
MAX_LEVERAGE=5                # Maximum leverage (1-10)
MAX_DAILY_DRAWDOWN=0.10       # 10% daily loss limit
MAX_POSITION_SIZE=0.05        # 5% max per position

# ─────────────────────────────────────────────────────────────
# STRATEGIES
# ─────────────────────────────────────────────────────────────
CASH_COW_ENABLED=true         # Funding rate arbitrage
TREND_KILLER_ENABLED=true     # OI + CVD trend following
SNIPER_ENABLED=true           # Gate.io listing sniper
